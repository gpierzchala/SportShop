@model SportShop.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "SportShop: Shipping";
}

<h2>Shipping</h2>

Plase give you shipping address, then your order will be sent as soon as possible.

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    
    <h3>Shiping for:</h3>
    <div>Name: @Html.EditorFor(x=>x.Name)</div>
    
    <h3>Address</h3>
    
    <div>Line 1: @Html.EditorFor(x=>x.Line1)</div>
    <div>Line 2: @Html.EditorFor(x=>x.Line2)</div>
    <div>Line 3: @Html.EditorFor(x => x.Line3)</div>
    <div>City: @Html.EditorFor(x=>x.City)</div>
    <div>State: @Html.EditorFor(x=>x.State)</div>
    <div>Zip code: @Html.EditorFor(x=>x.Zip)</div>
    <div>Country: @Html.EditorFor(x=>x.Country)</div>
    
    <h3>Options</h3>
    <label>
        @Html.EditorFor(x=>x.GiftWrap)
        Gift packaging
    </label>
    
    <p align="center">
        <input class="actionButtons" type="submit" value="Confirm order"/>
    </p>
}